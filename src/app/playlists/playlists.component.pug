.container
  table(mat-table, [dataSource]="playlists",  class="mat-elevation-z8")
    ng-container(matColumnDef="image")
      th(mat-header-cell, *matHeaderCellDef) No.
      td(mat-cell, *matCellDef="let element")
        img(src="{{ element.imageUrl }}")

    ng-container(matColumnDef="name")
      th(mat-header-cell, *matHeaderCellDef) Name
      td(mat-cell, *matCellDef="let element") {{ element.name }}

    ng-container(matColumnDef="songs")
      th(mat-header-cell, *matHeaderCellDef) Nr. of Songs
      td(mat-cell, *matCellDef="let element") {{ element.tracks.total }}

    ng-container(matColumnDef="actions")
      th(mat-header-cell, *matHeaderCellDef) Import
      td(mat-cell, *matCellDef="let element")
        button(mat-icon-button, color="primary", (click)="importPlaylist(element)")
          mat-icon import_export

    tr(mat-header-row, *matHeaderRowDef="displayedColumns")
    tr(mat-row, *matRowDef="let row; columns: displayedColumns;")
